generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  users     User[]
  items     Item[]
  orders    Order[]
  expenses  Expense[]
}

model User {
  id             Int           @id @default(autoincrement())
  name           String
  email          String        @unique
  password       String
  role           UserRole      @default(CASHIER)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])

  orders         Order[]
  expenses       Expense[]
}

enum UserRole {
  OWNER
  ADMIN
  MANAGER
  CASHIER
}

model Item {
  id             Int           @id @default(autoincrement())
  name           String
  sellingPrice   Float
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])

  expenses       Expense[]
  orderItems     OrderItem[]
}

model Expense {
  id             Int          @id @default(autoincrement())
  description    String
  amount         Float
  type           ExpenseType?
  expenseNature  ExpenseNature  @default(DIRECT) // new field
  createdAt      DateTime       @default(now())

  // Direct expense: linked to a specific item
  itemId         Int?
  item           Item?          @relation(fields: [itemId], references: [id])

  // Optional: who made the expense
  userId         Int?
  user           User?          @relation(fields: [userId], references: [id])

  // Organization
  organizationId Int
  organization   Organization   @relation(fields: [organizationId], references: [id])
}

/// Define if the expense is direct (item-related) or indirect (overhead)
enum ExpenseNature {
  DIRECT
  INDIRECT
}

enum ExpenseType {
  INGREDIENT
  PACKAGING
  UTILITY
  TRANSPORT
  MAINTENANCE
  RENT
  SALARY
  OTHER
}


model Order {
  id             Int         @id @default(autoincrement())
  orderNumber    String      @unique
  userId         Int
  user           User        @relation(fields: [userId], references: [id])
  createdAt      DateTime    @default(now())
  totalAmount    Float       @default(0)

  status         OrderStatus @default(PENDING)

  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])

  orderItems     OrderItem[]
}

enum OrderStatus {
  PENDING
  COMPLETED
  CANCELLED
}

model OrderItem {
  id       Int    @id @default(autoincrement())
  orderId  Int
  order    Order  @relation(fields: [orderId], references: [id])

  itemId   Int
  item     Item   @relation(fields: [itemId], references: [id])

  quantity Int
  price    Float
}
